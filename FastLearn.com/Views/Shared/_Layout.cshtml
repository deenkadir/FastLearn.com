@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@using Microsoft.AspNet.Identity.Owin;
@using FastLearn.com.Models;
@using FastLearn.com.DAL;
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="generator" content="Mobirise v3.9.0, mobirise.com">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="assets/images/logo-372x128-51.png" type="image/x-icon">
    <meta name="description" content="">
    <title>@ViewBag.Title - FastLearn.com</title>
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic&amp;subset=latin">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="~/assets/bootstrap-material-design-font/css/material.css">
    <link rel="stylesheet" href="~/assets/tether/tether.min.css">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/animate.css/animate.min.css">
    <link rel="stylesheet" href="~/assets/socicon/css/socicon.min.css">
    <link rel="stylesheet" href="~/assets/dropdown/css/style.css">
    <link rel="stylesheet" href="~/assets/theme/css/style.css">
    <link rel="stylesheet" href="~/assets/mobirise/css/mbr-additional.css" type="text/css">
    @*<link href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
    @Scripts.Render("~/assets/bootstrap-material-design-font/css/material.css")
    @Scripts.Render("~/assets/tether/tether.min.css")
    @Scripts.Render("~/assets/bootstrap/css/bootstrap.min.css")
    @Scripts.Render("~/assets/animate.css/animate.min.css")
    @Scripts.Render("~/assets/mobirise/css/mbr-additional.css")
    @Scripts.Render("~/assets/socicon/css/socicon.min.css")
    @Scripts.Render("~/assets/dropdown/css/style.css")
    @Scripts.Render("~/assets/theme/css/style.css")
 </head >
<body>
  <section id="menu-9">
    <nav class="navbar navbar-dropdown navbar-fixed-top">
        <div class="container">
            <div class="mbr-table">
                <div class="mbr-table-cell">
                    <div class="navbar-brand">
                        <span class="navbar-logo"><a href="~/Home"><img src="~/assets/images/logo-372x128-51.png" alt="Mobirise"></a></span>
                        <a class="navbar-caption" href="https://mobirise.com"></a>
                    </div>
                </div>
                <div class="mbr-table-cell">
                    <button class="navbar-toggler pull-xs-right hidden-md-up" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
                        <div class="hamburger-icon"></div>
                    </button>
                    <ul class="nav-dropdown collapse pull-xs-right nav navbar-nav navbar-toggleable-sm" id="exCollapsingNavbar">
                        <li class="nav-item dropdown">
                        <a class="nav-link link dropdown-toggle" data-toggle="dropdown-submenu" href="https://mobirise.com/" aria-expanded="false">COURSE</a>
                       <div class="dropdown-menu">@{
                           if (User.IsInRole("Student"))
                           {
		<a class="dropdown-item" href="#">MY COURSE</a> 
                           }
                            }
                            <a class="dropdown-item" href="~/Course/">COURSES</a>
                            @{
                                if (User.IsInRole("Instructor"))
                                {
                                    <a class="dropdown-item" href="~/Course/Create">ADD COURSE</a>
                                }}
                            @{ if (User.IsInRole("Admin"))
                                {
                                    <a class="dropdown-item" href="~/Course/Create" aria-expanded="false">ADMINISTER COURSE</a> /**/
                                }}
                            </div>
                        </li>@{ if (User.Identity.IsAuthenticated) {<li class="nav-item dropdown open">
                        <a class="nav-link link dropdown-toggle" data-toggle="dropdown-submenu" href="https://mobirise.com/" aria-expanded="true">PROFILE</a>
                        <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">View Profile</a>
                        <a class="dropdown-item" href="#">Notification</a>
                        </div>
                        </li>} }
                        <li class="nav-item">
                            <a class="nav-link link" href="~/Home/About">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link link" href="~/Home/Contact">CONTACT</a>
                        </li>
                        <li class="nav-item">
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                    <button hidden="" class="navbar-toggler navbar-close" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
                        <div class="close-icon"></div>
                    </button>
                </div>
            </div>
        </div>
    </nav></section>
    <input name="animation" type="hidden">
    <section class="mbr-section mbr-section-hero mbr-section-full mbr-section-with-arrow mbr-after-navbar" id="header4-d">
        @RenderBody()
        </section>
        <footer class="mbr-small-footer mbr-section mbr-section-nopadding" id="footer1-2" style="background-color: rgb(0, 168, 133); padding-top: 1.75rem; padding-bottom: 1.75rem;">
            <div class="container">
                <p class="text-xs-center">Copyright (c) 2016 FastLearn</p>
            </div>
        </footer>
        @Scripts.Render("~/assets/web/assets/jquery/jquery.min.js")
        @Scripts.Render("~/assets/tether/tether.min.js")
        @Scripts.Render("~/assets/bootstrap/js/bootstrap.min.js")
        @Scripts.Render("~/assets/smooth-scroll/SmoothScroll.js")
        @Scripts.Render("~/assets/viewportChecker/jquery.viewportchecker.js")
        @Scripts.Render("~/assets/dropdown/js/script.min.js")
        @Scripts.Render("assets/jarallax/jarallax.js")
        @Scripts.Render("~/assets/touchSwipe/jquery.touchSwipe.min.js")
        @Scripts.Render("~/assets/theme/js/script.js")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("Scripts", required: false)
       
        <input name="animation" type="hidden">
</body>
</html>
