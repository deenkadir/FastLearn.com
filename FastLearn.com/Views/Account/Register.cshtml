@model FastLearn.com.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="mbr-section mbr-section--relative mbr-section--fixed-size mbr-after-navbar" id="form1-0" style="background-color: rgb(239, 239, 239);">
    <div class="mbr-section__container mbr-section__container--std-padding container" style="padding-top: 93px; padding-bottom: 93px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2" data-form-type="formoid">
                        <div class="mbr-header mbr-header--center mbr-header--std-padding">
                            <h2>@ViewBag.Title.</h2>
                            </div>
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Create a new account.</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                    </div>
                                <div class="form-group">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                    </div>
                                <div class="form-group">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <div class="mbr-buttons mbr-buttons--right">
                                        <input type="submit" class="mbr-buttons__btn btn btn-lg btn-danger" value="Register" />
                                    </div>
                                </div>
                            }
                        </div>
                        </div></div></div></div>
</section>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
